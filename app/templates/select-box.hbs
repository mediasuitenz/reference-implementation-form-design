<h3>Object multi-select</h3>
{{mediasuite-select-box
  options=model.object.values
  value=model.object.selected
  multiple=true
  label='Favourite Gunter:'
  optionValuePath='id'
  optionLabelPath='name'
  placeholderOption=false
  update=(action (mut model.object.selected))
}}
<p>Selected: <b>
  {{#each model.object.selected as |item|}}
    {{item.name}}
  {{/each}}
  </b></p>

